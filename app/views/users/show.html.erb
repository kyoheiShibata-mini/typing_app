<center>
  <div class="heading">
    <h1 class="title"><%="#{@user.name}のマイページ"%></h1>
  </div>

  <div class="profile-wrapper">
    <div class="profile-image">
      <p class="profile-text">ユーザーアイコン</p>
      <%if @image_name%>
        <%=image_tag "chara/#{@image_name}.png", class: "item-image"%>
      <% else %>
        <div class="item-image">
          <a class="no-image">
            画像なし
          </a>
        </div>
      <% end %>
    </div>
    <div class="profile">
      <p class="profile-text">登録カード情報</p>

      <%if @card%>
        <div class="Card_info">
          【カード番号】
          <br>
          <%= "**** **** **** " + @card[:last4] %>
          <%# カード番号の下4桁を取得 %>
          <br>
          【有効期限】
          <br>
          <%= @card[:exp_month] %>
          <%# 有効期限の「月」を取得 %>
          /
          <%= @card[:exp_year] %>
          <%# 有効期限の「年」を取得 %>
          <br>
        </div>
      <%end%>
      <%if @latest_result%>
        <p class="profile-text"><%="前回のスコア"%></p>
        得点：<%=@latest_result.score%><br>
        速度(タイプ数/秒)：<%=@latest_result.speed%><br>
        <%if @latest_result.miss_key%>
          ミスしたキー：
          <table border="1">
            <%@latest_miss_key.each do |miss_key|%>
              <tr>
                <td class="miss-key-table"><%=miss_key[:name]%></td>
                <td class="miss-key-table"><%=miss_key[:value]%>回</td>
              </tr>
            <% end %>
          </table>
        <% end %>
      <% end %>
      <%= link_to "編集", edit_user_path, class: "edit-button"%>
    </div>
  </div>

  <div class="links-wrapper">
    <%= button_to "ログアウト", destroy_user_session_path, method: :delete, class: "links"%>
  </div>
</center>