<div class="rogin-wrapper">
  <p class="login-title">カード登録</p>

  <%= form_with  url: cards_path, id: 'charge-form', class: 'registration-main',local: true do |f| %>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">カード番号</label>
      </div>
      <%= f.text_field :number, class:"input-default", placeholder:"カード番号(半角英数字)", autofocus: "16" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">CVC</label>
      </div>
      <%= f.text_field :cvc, class:"input-default", placeholder:"カード背面にある3桁の番号", maxlength:"3" %>
    </div>
    <div class='input-expiration-date-wrap'>
      <div class='form-text-wrap'>
        <label class="form-text">有効期限</label>
      </div>
      <div class= "exp_form">
      <%= f.select :exp_month, 1..12, {include_blank: "---"}, class: "input-default-mini" %>
      月
      </div>
      <div class= "exp_form">
      <%= f.select :exp_year, 20..25, {include_blank: "---"}, class: "input-default-mini" %>
      <p>年</p>
      </div>
    </div>
    <%= f.submit "送信" ,class:"login-btn" %>
  <% end %>
</div>