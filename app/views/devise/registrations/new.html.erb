<div class="rogin-wrapper">
  <p class="login-title">新規登録</p>

  <%= form_with class: 'registration-main', model: resource, as: resource_name, url: user_registration_path, local: true do |f|%>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">名前</label>
      </div>
      <%= f.text_area :name, class:"input-default", id:"name", placeholder:"例）蟻屋長次郎太朗坐右衛門", autofocus: true %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">メールアドレス</label>
      </div>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード</label>
      </div>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード（確認）</label>
      </div>
      <%= f.password_field :password_confirmation, class:"input-default", id:"password", placeholder:"" %>
    </div>
    <%= f.submit "送信" ,class:"login-btn" %>
  <% end %>
</div>
